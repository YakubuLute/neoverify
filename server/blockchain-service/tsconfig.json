{
  "compilerOptions": {
    /* Language & Environment */
    "target": "ES2020",                       
    "module": "CommonJS",                     
    "lib": ["ES2020"],                        
    "moduleResolution": "node",               

    /* Paths & Output */
    "outDir": "./dist",                       
    "rootDir": "./src",                       
    "baseUrl": "./src",                       
    "paths": {
      "*": ["*"]
    },

    /* Type Checking */
    "strict": true,                           
    "noImplicitAny": true,                    
    "strictNullChecks": true,                 
    "strictBindCallApply": true,              
    "alwaysStrict": true,                     

    /* Interop */
    "esModuleInterop": true,                  
    "resolveJsonModule": true,                
    "allowSyntheticDefaultImports": true,     

    /* Node.js Specific */
    "types": ["node", "express"],             

    /* Debugging */
    "sourceMap": true,                        
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
